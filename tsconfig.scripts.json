{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./scripts-dist",
        "rootDir": "./scripts",
        "target": "ES2022",
        "module": "ESNext",
        "skipLibCheck": true,

        "moduleResolution": "Node",
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true,
        "skipDefaultLibCheck": true,
    },
    "include": ["scripts/**/*.ts"],
    "exclude": ["node_modules"]
}